<h3>Agregar una nueva novedad</h3>
<form action="/admin/novedades/agregar" method="post">
    <div>
        <input type="text" name="titulo" placeholder="Titulo">
    </div>
    <div>
        <textarea name="subtitulo"  placeholder="Subtitulo"></textarea>
    </div>
    <div>
        <textarea name="cuerpo"  placeholder="Cuerpo"></textarea>
    </div>
    <button type="submit">Guardar</button>

</form>
{{#if error}}
    <p> {{message}} </p>
{{/if}}